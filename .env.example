# Flask Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# Security - CHANGE THIS IN PRODUCTION
SECRET_KEY=your_secret_key_here_change_in_production

# Google Maps API (for geocoding addresses)
# Get your API key from: https://developers.google.com/maps/documentation/geocoding/get-api-key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenAI API (for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Database (SQLite is used by default, no configuration needed)
# For production, you might want to use PostgreSQL or MySQL

# Server Configuration
PORT=5000
FLASK_ENV=development
FLASK_DEBUG=true

# CORS Configuration (for production, specify allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000